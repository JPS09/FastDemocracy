<div class="createcontact" style="padding:26px">
  <%= simple_form_for @contact do |f| %>
  <div class="d-flex justify-content-space-between">
    <div style="color:black"><%= f.input :last_name, label: 'Last Name' %></div>
    <div style="color:black"><%= f.input :first_name, label: 'First name' %></div>
  </div>
    <div style="color:black"><%= f.input :email %></div>
    <%= hidden_field_tag(:user_id, current_user.id) %>
    <%= f.button :submit, class: "btn", style: "margin-left:73px"%>
  <% end %>
</div>
