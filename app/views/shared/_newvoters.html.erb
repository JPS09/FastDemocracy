<div style="margin-bottom:60px" class="voterscard">
  <%= simple_form_for @poll, as: :poll, method: :post, url: add_voters_path(@poll) do |f| %>
    <div style="color:white; padding: 15px"><%= hidden_field_tag(:poll_id, @poll.id) %></div>
    <div style="color:white; padding: 15px"><%= f.input :voters, input_html: { value: "", name: "voters[]"}, hint: '10-200 characters' %> <div><a class='add_voter' >+ add a voter</a></div>
    <%# <div> <%= f.button :submit, "Update Poll", style: "margin: 0 auto; width: 250px; font-weight: bold; color: white;" %>
  <% end %>
</div>

<div class="footer main-card d-flex justify-content-around" >

<button class="button_update_poll", style="font-weight: bold; color: #5f50df;">Update Poll</button>

     <%= link_to questions_done_path(@poll), method: :patch do %>
        <div class="footer-btn"><i class="far fa-check-circle w-16 fa-2x" id='check-icon'></i></div>
      <% end %>
  </div>
</div>
