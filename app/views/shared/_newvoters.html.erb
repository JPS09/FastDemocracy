<div class="voterscard">
  <%= simple_form_for @poll, as: :poll, method: :post, url: add_voters_path(@poll) do |f| %>
    <div style="color:white; padding: 15px"><%= hidden_field_tag(:poll_id, @poll.id) %></div>
    <div style="color:white; padding: 15px"><%= f.input :voters, input_html: { value: "", name: "voters[]"}, hint: '10-200 characters' %></div>

    <div style="color:white; padding: 15px"><%= f.button :submit, class: "btn", style: "margin-left:20px" %>
  <% end %>
</:white; padding: 15px

<div class="footer main-card">
  <div class="footer-btn"><i class="fas fa-plus"></i></div>
  <div class="footer-btn"><i class="fas fa-chevron-right"></i></div>
</div>


<div style="margin-bottom:60px" class="questioncard">
    <%= simple_form_for @question do |f| %>
      <div style="color:white; padding:15px"><%= f.input :title, label: 'Your question title please:', error: 'This question title is not valid'%></div>
      <div style="color:white; padding:15px"><%= f.input :answers, input_html: { value: "", name: "answers[]"} %> <a class='add_answer' > + add an answer</a></div>

      <%= hidden_field_tag(:poll_id, @poll.id) %>
      <%= f.button :submit, "+ Add a question", class:"btn-primary"%>
    <% end %>
  </div>


  <div class="footer main-card">
    <div class="footer-btn">
    </div>


    <%= link_to questions_done_path(@poll), method: :patch do %>
      <div class="footer-btn"><i class="far fa-check-circle w-16 fa-2x" id='check-icon'></i></div>
    <% end %>
    </div>
  </div>
