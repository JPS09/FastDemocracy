  </div>





  <div class="footer main-card">
    <div class="footer-btn">
    <%= link_to root_path do %>
      <i class="fas fa-chevron-left"></i>
      <% end %>
    </div>
    <div class="footer-btn"><i class="fas fa-plus"></i></div>

    <%= link_to questions_done_path(@poll), method: :patch do %>
      <div class="footer-btn"><i class="fas fa-chevron-right"></i></div>
    <% end %>
    </div>
  </div>





