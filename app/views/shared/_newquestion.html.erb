  <div style="margin-bottom:60px" class="questioncard">
    <%= simple_form_for @question do |f| %>
      <div style="color:white; padding:15px"><%= f.input :title, label: 'Your question title please:', error: 'This question title is not valid'%></div>
      <div style="color:white; padding:15px"><%= f.input :content, hint: '10-200 characters' %></div>
      <div style="color:white; padding:15px"><%= f.input :answers, input_html: { value: "", name: "answers[]"}, hint: '10-200 characters' %></div>
      <div style="color:white; padding:15px"><%= f.input :answers, input_html: { value: "", name: "answers[]"}, hint: '10-200 characters' %></div>
      <div style="color:white; padding:15px"><%= f.input :answers, input_html: { value: "", name: "answers[]"}, hint: '10-200 characters' %></div>
